{
  "name": "switchTabs",
  "version": "1.0.0",
  "description": "Build an Extension!",
  "manifest_version": 3,
  "action": {
    "default_popup": "mainPage/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://www.twitch.tv/*"],
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "next-ch": {
      "suggested_key": {
        "default": "Alt+Right",
        "mac": "Command+Right"
      },
      "description": "next"
    },
    "previous-ch": {
      "suggested_key": {
        "default": "Alt+Left",
        "mac": "Command+Left"
      },
      "description": "previous"
    },
    "volume-up": {
      "suggested_key": {
        "default": "Alt+Up",
        "mac": "Command+Up"
      },
      "description": "volume up"
    },
    "volume-down": {
      "suggested_key": {
        "default": "Alt+Down",
        "mac": "Command+Down"
      },
      "description": "volume down"
    }
  },
  "permissions": ["tabs", "scripting", "nativeMessaging"],
  "host_permissions": [
    "http://example.com/",
    "<all_urls>"
  ]

}
